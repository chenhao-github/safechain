<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text1Style">
        <item name="android:textColor">@color/colorIdentity</item>
        <item name="android:textSize">@dimen/dp_13</item>
    </style>
    <style name="Text2Style">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textColor">@color/colorMyName</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Text3Style">
        <item name="android:textColor">@color/colorMyRight</item>
        <item name="android:textSize">@dimen/dp_13</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--订单 导航基本样式 -->
    <style name="Text1StyleOrder">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:layout_width">@dimen/dp_68</item>
        <item name="android:layout_height">@dimen/dp_26</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dp_17</item>
    </style>
    <!--订单 子布局文本样式 -->
    <style name="Text2StyleOrder">
        <item name="android:textSize">@dimen/dp_13</item>
        <item name="android:textColor">@color/colorIdentity</item>
        <item name="android:layout_marginTop">@dimen/dp_13</item>
        <item name="android:layout_marginLeft">@dimen/dp_18</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <!--灰线样式-->
    <style name="Line1Style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorLine1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
    </style>


</resources>
