<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_wallet_chain_address_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--选择地址类型-->
    <TextView
        android:id="@+id/txt_chain_type"
        android:text="@string/chain_type_title"
        android:textSize="@dimen/dp_13"
        android:textColor="@color/colorIdentity"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_chains"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_below="@+id/txt_chain_type"
        android:layout_above="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/btn_cancel"
        android:text="@string/wallet_cancel"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/colorTransfer"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button_white"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_40" />

</RelativeLayout>