<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60">
    <TextView
        android:id="@+id/txt_price"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_centerVertical="true"
        android:textSize="@dimen/dp_17"
        android:textColor="@color/colorMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_chain_name"
        android:layout_toRightOf="@+id/rl_icon"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_centerVertical="true"
        android:text="ETH"
        android:textSize="@dimen/dp_17"
        android:textColor="@color/colorMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_chain_money1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rl_icon"
        android:layout_marginRight="@dimen/dp_18"
        android:text="100000"
        android:textSize="@dimen/dp_17"
        android:textColor="@color/colorMyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_chain_money2"
        android:layout_below="@+id/txt_chain_money1"
        android:layout_alignRight="@+id/txt_chain_money1"
        android:text="2000"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/colorMyRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>