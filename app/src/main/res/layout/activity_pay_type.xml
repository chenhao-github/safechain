        <!--银行名字-->
        <EditText
            android:id="@+id/sp_bank_name"
            android:layout_below="@+id/et_user_name"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorMyName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_login_account"
            android:typeface="normal"
            android:hint="@string/my_paytype_unionpay_bankname_hint"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
        <!--开户银行地址输入框-->
        <EditText
            android:id="@+id/et_bank_address"
            android:layout_below="@+id/sp_bank_name"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorMyName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_login_account"
            android:typeface="normal"
            android:hint="@string/my_paytype_unionpay_bankaddress_hint"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
        <!--银行卡号-->
        <EditText
            android:id="@+id/et_bank_no"
            android:layout_below="@+id/et_bank_address"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorMyName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_login_account"
            android:typeface="normal"
            android:hint="@string/my_paytype_unionpay_bankno_hint"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
    <!--提交-->
    <Button
        android:id="@+id/btn_submit"
        android:text="@string/transaction_sale_confirm"
        android:textSize="@dimen/dp_17"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button_yellow"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_40" />

</RelativeLayout>