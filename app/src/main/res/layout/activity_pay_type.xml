<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my.PayTypeActivity">
    <!--第一行-->
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@mipmap/ic_my_back" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_add_paytype"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />
    </RelativeLayout>
    <!--第一行下的灰线-->
    <TextView
        android:id="@+id/txt_line"
        android:layout_below="@+id/rl_top"
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <!--支付方式 title-->
    <RelativeLayout
        android:id="@+id/rl_paytype_title"
        android:layout_below="@+id/txt_line"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--微信-->
        <RelativeLayout
            android:id="@+id/rl_wechat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_wechat"
                android:src="@mipmap/ic_add_paytype_wechat_select"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39" />
            <TextView
                android:id="@+id/txt_wechat"
                android:layout_below="@+id/img_wechat"
                android:text="@string/transaction_paytype_wechat"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/colorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--支付宝-->
        <RelativeLayout
            android:id="@+id/rl_alipay_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_alipay"
                android:src="@mipmap/ic_add_paytype_alipay_noselect"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39" />
            <TextView
                android:id="@+id/txt_alipay"
                android:layout_below="@+id/img_alipay"
                android:text="@string/transaction_paytype_alipay"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/colorMyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--银联-->
        <RelativeLayout
            android:id="@+id/rl_unionpay_title"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_unionpay"
                android:src="@mipmap/ic_add_paytype_unionpay_noselect"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39" />
            <TextView
                android:id="@+id/txt_unionpay"
                android:layout_below="@+id/img_unionpay"
                android:text="@string/transaction_paytype_unionpay"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/colorMyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
    <!--上传区域-->
    <!--微信上传区域-->
    <RelativeLayout
        android:id="@+id/rl_wechat_upload_update"
        android:layout_below="@+id/rl_paytype_title"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--账号-->
        <EditText
            android:id="@+id/et_wechat_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorMyName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_login_account"
            android:typeface="normal"
            android:hint="@string/my_paytype_wechat_hint"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
        <!--二维码-->
        <ImageView
            android:id="@+id/img_wechat_icon"
            android:layout_below="@+id/et_wechat_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_17"
            android:src="@mipmap/ic_add_paytype_icon_defaul"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_133" />
        <TextView
            android:id="@+id/txt_wechat_upload_icon"
            android:layout_below="@+id/img_wechat_icon"
            android:layout_marginTop="@dimen/dp_27"
            android:text="@string/my_paytype_upload"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--支付宝上传区域-->
    <RelativeLayout
        android:id="@+id/rl_alipay_upload_update"
        android:layout_below="@+id/rl_paytype_title"
        android:layout_marginTop="@dimen/dp_40"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--账号-->
        <EditText
            android:id="@+id/et_alipay_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorMyName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_login_account"
            android:typeface="normal"
            android:hint="@string/my_paytype_alipay_hint"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
        <!--二维码-->
        <ImageView
            android:id="@+id/img_alipay_icon"
            android:layout_below="@+id/et_alipay_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_17"
            android:src="@mipmap/ic_add_paytype_icon_defaul"
            android:layout_width="@dimen/dp_133"
            android:layout_height="@dimen/dp_133" />
        <TextView
            android:id="@+id/txt_alipay_upload_icon"
            android:layout_below="@+id/img_alipay_icon"
            android:layout_marginTop="@dimen/dp_27"
            android:text="@string/my_paytype_upload"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--银联-->
    <RelativeLayout
        android:id="@+id/rl_unionpay_upload_update"
        android:visibility="invisible"
        android:layout_below="@+id/rl_paytype_title"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--持卡人姓名-->
        <EditText
            android:id="@+id/et_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorMyName"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/bg_login_account"
            android:typeface="normal"
            android:hint="@string/my_paytype_unionpay_username_hint"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
        <!--开户卡地址-->
        <!--<RelativeLayout
            android:id="@+id/rl_bank_address"
