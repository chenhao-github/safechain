<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wallet.TransferActivity">
    <!--第一行-->
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:src="@mipmap/ic_my_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txt_chain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATOM"
                android:textColor="@color/colorTitle"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_transfer"
                android:textColor="@color/colorTitle"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_scan_code"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@mipmap/ic_wallet_scan_code" />
    </RelativeLayout>
    <!--第一行下的灰线-->
    <TextView
        android:id="@+id/txt_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/rl_top"
        android:background="@color/colorLine" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_115"
        android:layout_below="@+id/txt_line">

        <TextView
            android:id="@+id/moneyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_26"
            android:text="ATOM"
            android:textSize="@dimen/dp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_5"
            android:text="0"
            android:textColor="@color/colorPwdForget"
            android:textSize="@dimen/dp_13"
            app:layout_constraintRight_toLeftOf="@id/moneyType2"
            app:layout_constraintTop_toTopOf="parent" />
        
        <TextView
            android:id="@+id/moneyType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_13"
            android:text="ATOM"
            android:textColor="@color/colorPwdForget"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_18"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tx_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_26"
            android:text="余额："
            android:textColor="@color/colorPwdForget"
            android:textSize="@dimen/dp_13"
            app:layout_constraintRight_toLeftOf="@id/balance"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@null"
            android:hint="请输入金额"
            android:textColor="@color/colorGrayButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moneyType" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_below="@id/amount"
        android:background="@color/colorLine" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_below="@id/textLine">

        <TextView
            android:id="@+id/tx_payment_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:text="收款地址"
            android:textSize="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@mipmap/ic_detailed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ed_payment_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@null"
            android:hint="请输入金额"
            android:textColor="@color/colorGrayButton"
            android:textSize="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tx_payment_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/payment_address"
        android:background="@color/colorLine" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/miners_fee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:layout_below="@id/txt_line2">

        <TextView
            android:id="@+id/tx_miners_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:text="收款地址"
            android:textSize="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ed_miners_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@null"
            android:text="0.00  USDT"
            android:textColor="@color/colorGrayButton"
            android:textSize="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tx_miners_fee" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/miners_fee"
        android:background="@color/colorLine" />
</RelativeLayout>