<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransfer"
    android:fitsSystemWindows="true"
    tools:context=".ui.wallet.CollectionActivity">
    <!--第一行-->
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_10"
            android:background="@color/colorTransfer"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@mipmap/ic_collection_back" />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wallet_collection"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>
<!--收款中心区域-->
    <RelativeLayout
        android:id="@+id/qr_all"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_400"
        android:layout_below="@id/rl_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/shape_collect_money">
        <!--收款金额提示区域-->
        <LinearLayout
            android:id="@+id/ll_transfer_money"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--钱包地址 文本-->
            <TextView
                android:id="@+id/txt_wallet_address_title"
                android:layout_gravity="center_horizontal"
                android:text="@string/wallet_address"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/colorMyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--地址值-->
            <TextView
                android:id="@+id/txt_wallet_address"
                android:layout_width="@dimen/dp_216"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>
        <!--二维码区-->
        <RelativeLayout
            android:id="@+id/rl_QRCodeBox"
            android:layout_below="@+id/ll_transfer_money"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_143"
            android:layout_height="@dimen/dp_143"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/bg_qr">
            <ImageView
                android:id="@+id/img_qr_code"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_123"
                android:layout_centerInParent="true"
                 />
        </RelativeLayout>

        <!--分享小区域-->
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_below="@+id/rl_QRCodeBox"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_38"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_wallet_share"
                android:src="@mipmap/ic_share_it"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/txt_wallet_share"
                android:text="@string/wallet_share"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/colorMyRight"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <!--复制小区域-->
        <LinearLayout
            android:id="@+id/ll_copy"
            android:layout_toRightOf="@+id/ll_share"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_alignBottom="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_wallet_copy"
                android:src="@mipmap/ic_copy"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/txt_wallet_copy"
                android:text="@string/wallet_copy"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/colorMyRight"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <!--设置小区域-->
        <LinearLayout
            android:id="@+id/ll_set_money"
            android:layout_toRightOf="@+id/ll_copy"
            android:layout_alignBottom="@+id/ll_copy"
            android:layout_marginLeft="@dimen/dp_41"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_wallet_set_money"
                android:src="@mipmap/ic_set_money"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/txt_wallet_set_money"
                android:text="@string/wallet_set_money"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/colorMyRight"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_wallet_dollar_gathering"
        android:src="@mipmap/ic_wallet_dollar_gathering"
        android:layout_below="@id/qr_all"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_36"
        />
    <TextView
        android:layout_below="@+id/img_wallet_dollar_gathering"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/app_name"
        android:textColor="@color/colorLogText"
        android:textSize="@dimen/dp_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>